@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.PostViewModel>
@using System.Collections.Generic
@{
  Layout = "default.cshtml";
}
@section menu {	
	<ul class="sf-menu">
		<li class="current"><a href="/">Home</a></li>
		<li><a href="/projects">Projects</a></li>
		<li><a href="/categories">Categories</a></li>
		<li><a href="/archive">Archive</a></li>          
	</ul>
}
<div class="post pad-bot">
	<div class="container_12">
		<div class="row">
			<div class="grid_12">
				<h2>@Model.Title</h2>
				<h3>@Model.PostDate.ToString("dd MMM yyyy")</h3>
			</div>
		<div>
		<div class="row">
			<div class="grid_12">
				<ul class="categories">
					@foreach (var category in Model.Categories) {
						<li>
							<a class="btn btn-default btn-sm" href="/category/@category.Url"><i class="fa fa-cog"></i> @category.Name</a>
						</li>
					}
				</ul>
					<!-- <div class="addthis_toolbox addthis_default_style" style="float:right;">
						<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
						<a class="addthis_button_tweet"></a>
						<a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
						<a class="addthis_button_linkedin_counter"></a>
						<a class="addthis_counter addthis_pill_style"></a>
					</div> -->
			</div>
		<div>
		<div class="row">
			<div class="grid_12">
					@Html.RenderSeries()
						
					@Html.Raw(Model.PostContent)

					@Html.RenderDisqusComments("macsenblog")
					
					<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-****"></script>
			</div>
		</div>
	</div>
</div>