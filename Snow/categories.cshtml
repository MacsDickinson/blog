@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.ContentViewModel>
@using System.Collections.Generic
@{
  Layout = "default.cshtml";
}

@section menu {	
	<ul class="sf-menu">
		<li><a href="/">Blog</a></li>
		<li><a href="/projects">Projects</a></li>
		<li class="current"><a href="/categories">Categories</a></li>
		<li><a href="/archive">Archive</a></li>          
	</ul>
}
<div class="post">
	<div class="row">
  		<div class="col-sm-6 col-sm-offset-3 categories">
			  @foreach(var category in Model.Categories){
			  	<h2><a href="/category/@category.Url" title="@category.Name">@category.Name</a></h2>
			  }
		</div>
	</div>
</div>
